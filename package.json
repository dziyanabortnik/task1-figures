{
  "name": "task1-figures",
  "version": "1.0.0",
  "description": "Geometry shapes calculation application with repository and warehouse patterns",
  "scripts": {
    "build": "tsc",
    "start": "node dist/run.js",
    "start:updated": "node dist/updated_app/UpdatedShapesApplication.js",
    "dev": "ts-node --esm src/run.ts",
    "dev:updated": "ts-node --esm --experimental-specifier-resolution=node --project tsconfig.esm.json src/updated_app/UpdatedShapesApplication.ts",
    "demo": "ts-node --esm --experimental-specifier-resolution=node src/demo.ts",
    "demo:updated": "ts-node --esm --experimental-specifier-resolution=node src/updated_app/demo.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:repository": "jest tests/repository/",
    "test:warehouse": "jest tests/warehouse/",
    "test:comparators": "jest tests/repository/comparators/",
    "test:specifications": "jest tests/repository/specifications/",
    "test:integration": "jest tests/updated_app/",
    "test:all": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "clean": "rm -rf dist coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dziyanabortnik/task1-figures.git"
  },
  "keywords": [
    "geometry",
    "shapes",
    "typescript",
    "repository",
    "warehouse",
    "observer",
    "singleton"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dziyanabortnik/task1-figures/issues"
  },
  "homepage": "https://github.com/dziyanabortnik/task1-figures#readme",
  "dependencies": {
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}